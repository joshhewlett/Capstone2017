    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug in Docker",
            "protocol": "auto",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "port": 5858,
            "restart": true,
            "timeout": 15000,
            "localRoot": "${workspaceRoot}/server",
            "remoteRoot": "/usr/src/app",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}